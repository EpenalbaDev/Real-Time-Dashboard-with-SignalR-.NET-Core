@inject ILocalizationService Loc

<nav class="sidebar-nav">
    <div class="sidebar-brand">
        <div class="brand-icon">R</div>
        <span class="nav-label">@Loc.Get("nav.brand")</span>
    </div>

    <div class="sidebar-links">
        <NavLink class="sidebar-link" href="dashboard" Match="NavLinkMatch.All">
            <span class="oi oi-dashboard" aria-hidden="true"></span>
            <span class="nav-label">@Loc.Get("nav.dashboard")</span>
        </NavLink>
        <NavLink class="sidebar-link" href="transactions">
            <span class="oi oi-list-rich" aria-hidden="true"></span>
            <span class="nav-label">@Loc.Get("nav.transactions")</span>
        </NavLink>
    </div>
</nav>

@code {
    [CascadingParameter(Name = "Lang")] public string? Lang { get; set; }
}
